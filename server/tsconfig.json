{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      "express",
      "bcryptjs",
      "jsonwebtoken",
      "cors",
      "morgan",
      "multer",
      "jest",
      "supertest"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 