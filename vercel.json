{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ],
    "buildCommand": "cd client && npm ci --legacy-peer-deps && npm run build",
    "installCommand": "npm cache clean --force && npm ci --legacy-peer-deps",
    "env": {
        "NODE_VERSION": "18.x"
    }
}