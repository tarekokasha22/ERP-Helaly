{
    "version": 2,
    "buildCommand": "bash vercel-build.sh",
    "outputDirectory": "client/build",
    "installCommand": "cd client && npm install --legacy-peer-deps",
    "env": {
        "REACT_APP_USE_MOCK": "true"
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}