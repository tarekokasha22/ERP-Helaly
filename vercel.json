{
    "version": 2,
    "buildCommand": "cd client && CI=false npm run build",
    "outputDirectory": "client/build",
    "installCommand": "cd client && npm install --legacy-peer-deps",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.ts": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}